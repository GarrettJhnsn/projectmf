                            <a class="nav-link" href="/packages">Packages</a>
                            <a class="nav-link" href="/consultation">Consultations</a>
                        </div>
                    </div>
                </div>
            </nav>
        </header>
        <!--Main-->
        <div class="main">
            {{block "content" .}}
            {{end}}
        </div>
        <!--Footer -->
        <div class="container">
            <footer class="footer py-1 d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
